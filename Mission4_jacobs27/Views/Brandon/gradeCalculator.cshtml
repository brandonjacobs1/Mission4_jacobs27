@{
    ViewData["Title"] = "Grade Calculator";
}

<!--Recieves input from the user about the individual grade weights-->
@model Mission4_jacobs27.Models.gradeCalculatorModel
<h1>Grade Calculator</h1>
<form method="post">
    <label>Assignments</label>
    <input type="number" id="assignment" asp-for="Assignments"/>
    <br />
    <label>Group Project</label>
    <input type="number" id="groupProject" asp-for="GroupProject" />
    <br />
    <label>Quizzes</label>
    <input type="number" id="quiz" asp-for="Quizzes"/>
    <br />
    <label>Midterm Exam</label>
    <input type="number" id="mExam" asp-for="MidtermExam" />
    <br />
    <label>Final Exam</label>
    <input type="number" id="fExam" asp-for="FinalExam"/>
    <br />
    <label>INTEX</label>
    <input type="number" id="intex" asp-for="Intex"/>
    <br />

    <input id="gradeCalc" type="submit" value="Calculate Final Grade" />
    <br />
    <div asp-validation-summary="All"></div>
    <h3>
        Final Grade:
        <label id="finalLetterGrade"></label>
    </h3>
</form>
